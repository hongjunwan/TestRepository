<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/book_keyword"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:hint="검색 키워드 입력"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/book_search"/>

    <Button
        android:id="@+id/book_search"
        android:layout_width="wrap_content"
        android:layout_height="42sp"
        android:text="SEARCH"

        app:layout_constraintRight_toRightOf="parent"/>

    <ListView
        android:id="@+id/listview_book"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@+id/book_keyword"
        app:layout_constraintBottom_toTopOf="@+id/book_prev">
    </ListView>

    <Button
        android:id="@+id/book_prev"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="이전"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/book_after"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/book_after"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/book_prev"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>